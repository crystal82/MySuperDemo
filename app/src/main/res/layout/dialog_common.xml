<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/round_bg_white_5_shape"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="提示"
        android:textColor="@color/black"
        android:textSize="17sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/silver"
        />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:gravity="center"
        android:text="dialog content"
        android:textColor="@color/black"
        android:textIsSelectable="true"
        android:textSize="17sp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#D1D1D1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/corner_left_selector"
            android:gravity="center"
            android:text="@string/btn_cancel"
            android:textColor="@color/black"
            android:textSize="17sp"/>

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#D1D1D1"/>

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/cornet_right_selector"
            android:gravity="center"
            android:text="@string/btn_sure"
            android:textColor="@color/black"
            android:textSize="17sp"/>
    </LinearLayout>
</LinearLayout>